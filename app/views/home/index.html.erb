<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900">Welcome to Fintech Assistant</h1>
    <p class="mt-3 text-xl text-gray-500">Your all-in-one platform for financial assistance and investment guidance</p>
    
    <% if logged_in? %>
      <div class="mt-8">
        <p class="text-lg text-gray-700">Welcome back, <%= current_user.name %>!</p>
        <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="p-6 bg-white rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-3">Voice Assistant</h2>
            <p class="text-gray-600 mb-4">Ask questions and get instant answers from your knowledgebase.</p>
            <!-- This will be linked once we create the assistant feature -->
            <a href="#" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
              Launch Assistant
            </a>
          </div>
          
          <div class="p-6 bg-white rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-3">Investments</h2>
            <p class="text-gray-600 mb-4">Track and analyze your stock investments.</p>
            <!-- This will be linked once we create the investment feature -->
            <a href="#" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
              View Investments
            </a>
          </div>
          
          <div class="p-6 bg-white rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-3">Account</h2>
            <p class="text-gray-600 mb-4">Manage your profile settings and preferences.</p>
            <%= link_to "Edit Profile", edit_user_path(current_user), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
        <%= link_to "Sign Up", signup_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
        <%= link_to "Log In", login_path, class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>
</div>