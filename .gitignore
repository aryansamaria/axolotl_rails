# Ignore bundler config and installed gems
/.bundle/
/vendor/bundle
/lib/bundler/man/

# Ignore all logfiles and tempfiles
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage (uploaded files in development and production)
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore master key for decrypting credentials
/config/master.key
/config/credentials/*.key

# Ignore database configuration
/config/database.yml

# Ignore environment variables file
.env
.env.*

#

# Ignore node modules
/node_modules/
/yarn-error.log
yarn-debug.log*
.yarn-integrity

# Ignore precompiled assets and cache
/public/assets
/public/packs
/public/packs-test
/app/assets/builds/*
!/app/assets/builds/.keep

# Ignore uploaded files in development
/public/uploads

# Ignore test coverage results
/coverage/

# Ignore generated docs
/doc/

# Ignore IDE specific files
.idea/
.vscode/
*.sublime-workspace
*.sublime-project
.project
.DS_Store

# Ignore Byebug command history file
.byebug_history

